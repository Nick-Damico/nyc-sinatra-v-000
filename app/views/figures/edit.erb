
<form method="post" action="/figures/<%= @figure.id %>">
  <label for="name">figure Name: </label>
  <input id="figure_name" type="text" name="figure[name]" value="<%= @figure.name %>">
  <br />

  <label>Figure Titles: </label>
  <br />
  <% Title.all.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <% "checked" if @figure.titles.include?(title)%>><%= title.name %></input>
    <br />
  <% end %>

  <input id="new_landmark" type="text" name="landmark[name]">

  <input type="submit" value="Edit Figure">

</form>
